<div class="container">
  <h2>注文履歴詳細</h2>

  <table class="table">
    <tr>
      <td>購入者</td>
      <td><%= link_to @order.delively_name, orders_path, style: 'color: inherit' %></td>
    </tr>
    <tr>
      <td>注文日</td>
      <td><%= @order.created_at %></td>
    </tr>
    <tr>
      <td>配送先</td>
      <td><%= @order.postal_code %> <%= @order.address %> <%= @order.delively_name %> </td>
    </tr>
    <tr>
      <td>支払方法</td>
      <% if @payment_method == 'credit_card' %>
        <td>クレジットカード</td>
      <% else %>
        <td>銀行振込</td>
      <% end %>
    </tr>
  </table>

  <table class="table">
    <tr>
      <td>商品名</td>
      <td>単価(税込)</td>
      <td>数量</td>
      <td>小計</td>
    </tr>
    <% @order_details.each do |order_detail| %>
      <tr>
        <td><%= order_detail.item.name %></td>
        <td><%= order_detail.item.price %></td>
        <td><%= order_detail.quentity %></td>
        <td><%= order_detail.item.price * order_detail.quentity %></td>
      </tr>
    <% end %>
  </table>


  <table class="total_table">
    <tr>
      <td>商品合計</td>
      <td colspan="3"></td>
      <td><%= @order_details.sum { |od| od.item.price * od.quentity } %></td>
    </tr>
      <td>送料</td>
      <td>800</td>
    <tr>
      <td>請求合計金額</td>
    </tr>
  </table>
</div>