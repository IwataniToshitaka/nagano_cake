<div class="container">
  <h2>会員一覧</h2>


  <table class="table">
  <tr>
    <th>会員ID</th>
    <th>氏名</th>
    <th>メールアドレス</th>
    <th>ステータス</th>
  </tr>
  <% @customers.each do |customer| %>
    <tr>
      <td><%= customer.id %></td>
      <td><%= link_to customer.last_name +
        customer.first_name, admin_customer_path(customer.id), style: "color: black; text-decoration: underline;" %></td>
      <td><%= customer.email %></td>
      <% if customer.is_active == true %>
    <td class="green-text">有効</td>
      <% elsif customer.is_active == false %>
    <td class="green-text">無効</td>
      <% end %>
    </tr>
  <% end %>
</table>

<%= paginate @customers %>
</div>