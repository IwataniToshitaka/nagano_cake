<h2>商品一覧</h2>

<table>
  <tr>
    <th>商品ID</th>
    <th>商品名</th>
    <th>商品説明</th>
    <th>税抜価格</th>
    <th>販売ステータス</th>
  </tr>
  <% @items.each do |item| %>
    <tr>
      <td><%= item.id %></td>
      <td><%= item.name %></td>
      <td><%= item.introduction %></td>
      <td><%= item.price %></td>
      <td>
        <% if item.payment_method == "販売中" %>
          <%= "販売中" %>
        <% elsif item.payment_method == "販売停止中" %>
          <%= "販売停止中" %>
        <% else %>
          <%= "未設定" %>
        <% end %>
      </td>
    </tr>
  <% end %>
</table>