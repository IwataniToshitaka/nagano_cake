
<h2>商品詳細</h2>

<table>
  <tr>
    <td>商品名</td>
    <td><%= @item.name %></td>
  </tr>
  <tr>
    <td>商品説明</td>
    <td><%= @item.introduction %></td>
  </tr>
  <tr>
    <td>税抜価格</td>
    <td><%= @item.price %></td>
  </tr>
  <tr>
    <td>販売ステータス</td>
    <td>
      <% if @item.payment_method == "販売中" %>
          <%= "販売中" %>

      <% elsif @item.payment_method == "販売停止中" %>
          <%= "販売停止中" %>
      <% else %>
          <%= "未設定" %>
      <% end %>
    </td>
  </tr>
</table>