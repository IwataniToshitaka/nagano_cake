<div class="container">
<h1>商品編集画面</h1>

<%= form_with model: @item, url: admin_item_path(@item.id), local: true, method: :patch do |f| %>


<p>商品画像</p>
  <%= f.file_field :image, accept: "image/*" %>

<p>商品名</p>
<%= f.text_field :name, value: @item.name %>

<p>商品説明</p>
  <%= f.text_area :introduction, placeholder: "ここに説明文を記述します", value: @item.introduction %>

<p>税抜価格</p>
  <%= f.text_field :price, placeholder: "1000", value: @item.price %><br>


<label>
  <p>販売ステータス</p>
</label><br>

<%= f.submit '変更を保存', class: 'btn btn-success', data: { confirm: '商品を登録してもよろしいですか？' } %>

<% end %>
</div>