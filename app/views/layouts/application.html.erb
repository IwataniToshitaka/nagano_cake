<html>
  <head>
    <title>NaganoCake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script src="https://kit.fontawesome.com/1084fc60d7.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav>
        <% if customer_signed_in? %>
          <nav class="navbar navbar-expand d-flex">
          <ul class="navbar-nav">
            <li class="nav-item mr-10"><%= link_to "LOGO", root_path, style: "color: black" %></li>
          </ul>
          <ul class="navbar-nav ml-auto">
            <li class="nav-item mr-5"><%= link_to "マイページ", customer_path(current_customer.id), style: "color: black" %></li>
            <li class="nav-item mr-5"><%= link_to "商品一覧", items_path, style: "color: black" %></li><!-- pathは未設定 -->
            <li class="nav-item mr-5"><%= link_to "カート", cart_items_path, style: "color: black" %></li>
            <li class="nav-item mr-5"><%= link_to "ログアウト", destroy_customer_session_path, method: :delete, style: "color: black" %></li>
          </ul>
          </nav>
        <% elsif admin_signed_in? %>
          <nav class="navbar navbar-expand d-flex">
          <ul class="navbar-nav">
            <li class="nav-item mr-10"><%= link_to "LOGO", root_path, style: "color: black" %></li>
          </ul>
          <ul class="navbar-nav ml-auto">
            <li class="nav-item mr-5"><%= link_to "商品一覧", admin_items_path, style: "color: black" %></li>
            <li class="nav-item mr-5"><%= link_to "会員一覧", admin_customers_path, style: "color: black" %></li><!-- pathは未設定 -->
            <li class="nav-item mr-5"><%= link_to "注文履歴一覧", admin_top_path, style: "color: black" %></li><!-- pathは未設定 -->
            <li class="nav-item mr-5"><%= link_to "ログアウト", destroy_admin_session_path, method: :delete, style: "color: black" %></li>
          </ul>
          </nav>
        <% else %>
          <nav class="navbar navbar-expand d-flex">
          <ul class="navbar-nav">
            <li class="nav-item mr-10"><%= link_to "LOGO", root_path, style: "color: black" %></li>
          </ul>
          <ul class="navbar-nav ml-auto">
            <li class="nav-item mr-5"><%= link_to "About", about_path, style: "color: black" %></li>
            <li class="nav-item mr-5"><%= link_to "商品一覧", items_path, style: "color: black" %></li>
            <li class="nav-item mr-5"><%= link_to "新規登録", new_customer_registration_path, style: "color: black" %></li>
            <li class="nav-item mr-5"><%= link_to "ログイン", new_customer_session_path, style: "color: black" %></li>
          </ul>
          </nav>
        <% end %>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>