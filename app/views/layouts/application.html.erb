<html>
  <head>
    <title>NaganoCake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script src="https://kit.fontawesome.com/1084fc60d7.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav>
        <% if customer_signed_in? %>
          <ul>
            <li><%= link_to "マイページ", admin_items_path %></li>
            <li><%= link_to "商品一覧", admin_items_path %></li><!-- pathは未設定 -->
            <li><%= link_to "カート", destroy_admin_session_path, method: :delete %></li>
            <li><%= link_to "ログアウト", destroy_customer_session_path, method: :delete %></li>
          </ul>
        <% elsif admin_signed_in? %>
          <ul>
            <li><%= link_to "商品一覧", items_path %></li>
            <li><%= link_to "会員一覧", admin_items_path %></li><!-- pathは未設定 -->
            <li><%= link_to "注文履歴一覧", new_customer_registration_path %></li><!-- pathは未設定 -->
            <li><%= link_to "ログアウト", destroy_admin_session_path, method: :delete %></li>
          </ul>
        <% else %>
          <ul>
            <li><%= link_to "About", homes_about_path %></li>
            <li><%= link_to "商品一覧", items_path %></li>
            <li><%= link_to "新規登録", new_customer_registration_path %></li>
            <li><%= link_to "ログイン", new_customer_session_path %></li>
          </ul>
        <% end %>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>