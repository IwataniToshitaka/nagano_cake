<h3>ショッピングカート</h3>

<table>
  <thead>

    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th>削除</th>
    </tr>
  </thead>
    <% total = 0 %>
    <% @cart_items.each do |cart_item| %>
      <% subtotal = (cart_item.item.price * 1.1 * cart_item.quentity).to_i %>
      <% total += subtotal %>
      <tr>
        <td><%= cart_item.item&.name %></td>
        <td><%= (cart_item.item&.price * 1.1).to_i %></td>
        <td>
          <%= form_with model: cart_item, url: cart_item_path(id: cart_item.id), method: :patch, local: true do |f| %>
            <%= f.number_field :quantity, min: 1, max: 100 %>
            <%= f.submit "変更", class: "btn-success" %>
          <% end %>
        </td>
        <td><%= subtotal %></td>
        <td><%= link_to "削除する", cart_item_path(id: cart_item.id), method: :delete, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<table>
  <tr>
    <td>
      <th>合計金額</th>
    </td>
    <td><%= total %></td>
  </tr>
</table>