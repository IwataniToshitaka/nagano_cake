<div class="d-flex justify-content-start">
  <h3 class="me-auto">ショッピングカート</h3>
  <%= link_to "カートを空にする", destroy_all_cart_items_path, method: :delete, class: "btn btn-danger", style: "margin-left: 100px;" %>
</div>
<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
    </tr>
  </thead>
  <tbody>
    <% total = 0 %>
    <% @cart_items.each do |cart_item| %>
      <% subtotal = (cart_item.item.price * 1.1 * cart_item.quentity).to_i %>
      <% total += subtotal %>
      <tr>
        <td><%= cart_item.item&.name %></td>
        <td><%= (cart_item.item&.price * 1.1).to_i %></td>
        <td>
          <%= form_with model: cart_item, url: cart_item_path(cart_item), method: :patch, local: true do |f| %>
            <select name="quentity">
              <% (1..100).each do |quentity| %>
                <option value="<%= quentity %>" <%= 'selected' if quentity == cart_item.quentity %>><%= quentity %></option>
              <% end %>
            </select>
            <%= f.submit "変更", class: "btn-success" %>
          <% end %>
        </td>
        <td><%= subtotal %></td>
        <td><%= link_to "削除する", cart_item_path(cart_item.id), method: :delete, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<table>
 <tr>
    <td colspan="15" class="text-right">
      <%= link_to "買い物を続ける", homes_top_path, class: "btn btn-primary" %>
    </td>
    <td colspan="15" class="text-right"><strong>合計金額</strong></td>
    <td><%= total %></td>
  </tr>
  <tr>
    <td colspan="15" class="text-center">
      <%= link_to "情報入力に進む", new_order_path, class: "btn btn-success" %>
    </td>
  </tr>
</table>
