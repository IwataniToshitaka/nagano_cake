<h1>カート内詳細</h1>

<table>
  <thead>

    <tr>
      <th>商品名</th>
      <th>商品単価</th>
      <th>数量</th>
      <th>小計</th>
      <th>削除</th>
    </tr>
  </thead>
			<tbody>
				<% @cart_items.each do |cart_item| %>
				<tr>
					<td><%= cart_item.product.name %></td>
					<td><%= (cart_item.product.price * 1.1).to_i %></td>
					<td>
						<%= form_with model: cart_item, url: cart_item_path(id: cart_item.id), method: :patch, local: true do |f| %>
							<%= f.number_field :quantity, min: 1, max: 100 %>
							<%= f.submit "変更" %>
						<% end %>
					</td>
					<td><%= (Product.find(cart_item.product_id).price * 1.1 * cart_item.quantity).to_i  %></td>
					<td><%= link_to "削除する", cart_item_path(id: cart_item.id), method: :delete, class: "btn btn-danger"  %></td>
				</tr>
				<% end %>
			</tbody>
